{
  "$schema": "https://railway.app/railway.schema.json",
  "project": {
    "name": "ace-api",
    "id": "${RAILWAY_PROJECT_ID}",
    "services": [
      {
        "name": "ace-api",
        "sourceDirectory": ".",
        "startCommand": "npm start",
        "envVars": {
          "ACE_ENV": "prod",
          "SUPABASE_URL": "${SUPABASE_URL}",
          "SUPABASE_SERVICE_ROLE_KEY": "${SUPABASE_SERVICE_ROLE_KEY}",
          "OPENAI_API_KEY": "${OPENAI_API_KEY}",
          "ACE_API_KEY": "${ACE_API_KEY}"
        }
      },
      {
        "name": "ace-worker",
        "sourceDirectory": ".",
        "startCommand": "node dist/workers/startWorker.js",
        "deploy": false,
        "note": "Placeholder for future worker deployment; enable when ready."
      }
    ]
  }
}
